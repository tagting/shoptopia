<h1>Store#index</h1>
<p>Find me in app/views/store/index.html.erb</p>
<div class="container">
    <% @products.each do |product| %>
        <%= link_to product.title, product_index_path(product) %> | <strong><%= product.price %></strong><span><%= button_to 'Add to Cart', line_item_index_path(item_id: product), class: "btn btn-primary" %></span>
    <% end %>
</div>