<div class="columns">
  <div class="column is-8 is-centered">

    <%= simple_form_for @comments, html: { multipart: true } do |f| %>
      <%= f.error_notification %>

        <div class="columns">

        <div class="field">
          <div class="control">
            <%= f.input :description, required: true, input_html: { class:"textarea" }, wrapper: false, label_html: { class:"label" } %>
          </div>
        </div>

        <div class="field is-grouped">
          <div class="control">
            <%= f.button :submit, class: 'button is-warning' %>
            <%= link_to 'Cancel', comments_path, class:'button is-light' %>
          </div>
        </div>

      <% end %>
  </div>
</div>